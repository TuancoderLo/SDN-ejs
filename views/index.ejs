                                    <input type="text" id="searchInput" placeholder="Search by name, brand, or description..." 
                                           class="input input-bordered join-item flex-1 focus:border-blue-500 focus:ring-blue-500 transition-all duration-300 h-16 text-lg shadow-lg hover:shadow-xl border-gray-300 bg-white text-gray-800 placeholder-gray-500">
                                    <button class="btn join-item bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white transition-all duration-300 h-16 px-8 shadow-lg rounded-r-xl">
                                        <i class="fas fa-search text-xl"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="form-control w-full lg:w-80">
                                <label class="label">
                                    <span class="label-text font-bold text-lg text-gray-800">
                                        <i class="fas fa-filter mr-2 text-purple-600"></i>
                                        Filter by Brand
                                    </span>
                                </label>
                                <select id="brandFilter" class="select select-bordered w-full focus:border-blue-500 focus:ring-blue-500 transition-all duration-300 h-16 text-lg shadow-lg hover:shadow-xl border-gray-300 bg-white text-gray-800">
                                    <option value="">All Brands</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Perfumes Grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 lg:gap-10" id="perfumesGrid">
                    <!-- Perfumes will be loaded here -->
                </div>
            </div>
        </section>

        <!-- Profile Section -->
        <section id="profile" class="section">
            <div class="container mx-auto px-4 py-12">
                <!-- Profile Header -->
                <div class="hero bg-white/80 backdrop-blur-sm shadow-xl rounded-3xl mb-12 border border-gray-200">
                    <div class="hero-content text-center p-12">
                        <div class="max-w-2xl">
                            <div class="avatar placeholder mb-8">
                                <div class="gold-gradient text-white rounded-full w-32 h-32 flex items-center justify-center shadow-2xl luxury-border">
                                    <span class="text-5xl">
                                        <i class="fas fa-crown"></i>
                                    </span>
                                </div>
                            </div>
                            <h1 class="text-5xl font-bold mb-4">
                                <span class="text-yellow-600">My</span> <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Profile</span>
                            </h1>
                            <p class="text-xl text-gray-600">
                                Manage your personal information and account settings
                            </p>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                    <!-- Personal Information Card -->
                    <div class="card bg-white/80 backdrop-blur-sm shadow-xl border border-gray-200 rounded-3xl">
                        <div class="card-body p-8">
                            <div class="flex items-center gap-4 mb-8">
                                <div class="badge badge-lg gold-gradient text-white border-0">
                                    <i class="fas fa-user-edit mr-2"></i>
                                </div>
                                <h2 class="card-title text-3xl text-gray-800">Personal Information</h2>
                            </div>
                            
                            <form id="profileForm" class="space-y-6">
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold text-gray-800">
                                            <i class="fas fa-user mr-2 text-blue-600"></i>
                                            Full Name
                                        </span>
                                    </label>
                                    <input type="text" id="profileName" placeholder="Enter your full name" 
                                           class="input input-bordered h-14 text-lg bg-white text-gray-800 placeholder-gray-500 border-gray-300 focus:border-blue-500 focus:ring-blue-500" required>
                                </div>
                                
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold text-gray-800">
                                            <i class="fas fa-calendar mr-2 text-blue-600"></i>
                                            Year of Birth
                                        </span>
                                    </label>
                                    <input type="number" id="profileYOB" min="1900" max="2024" 
                                           placeholder="YYYY" class="input input-bordered h-14 text-lg bg-white text-gray-800 placeholder-gray-500 border-gray-300 focus:border-blue-500 focus:ring-blue-500" required>
                                </div>
                                
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold text-gray-800">
                                            <i class="fas fa-venus-mars mr-2 text-blue-600"></i>
                                            Gender
                                        </span>
                                    </label>
                                    <select id="profileGender" class="select select-bordered h-14 text-lg bg-white text-gray-800 border-gray-300 focus:border-blue-500 focus:ring-blue-500" required>
                                        <option value="true">Male</option>
                                        <option value="false">Female</option>
                                    </select>
                                </div>
                                
                                <div class="card-actions justify-end mt-8">
                                    <button type="submit" class="btn btn-lg bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white shadow-lg rounded-xl">
                                        <i class="fas fa-save mr-2"></i>
                                        Update Profile
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Change Password Card -->
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <div class="flex items-center gap-3 mb-6">
                                <div class="badge badge-secondary badge-lg">
                                    <i class="fas fa-lock mr-2"></i>
                                </div>
                                <h2 class="card-title text-2xl">Change Password</h2>
                            </div>
                            
                            <form id="passwordForm" class="space-y-4">
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">
                                            <i class="fas fa-key mr-2 text-secondary"></i>
                                            Current Password
                                        </span>
                                    </label>
                                    <input type="password" id="oldPassword" placeholder="Enter current password" 
                                           class="input input-bordered input-secondary" required>
                                </div>
                                
                                <div class="form-control">
                                    <label class="label">
                                        <span class="label-text font-semibold">
                                            <i class="fas fa-shield-alt mr-2 text-secondary"></i>
                                            New Password
                                        </span>
                                    </label>
                                    <input type="password" id="newPassword" placeholder="Enter new password" 
                                           class="input input-bordered input-secondary" required>
                                </div>
                                
                                <div class="card-actions justify-end mt-6">
                                    <button type="submit" class="btn btn-secondary btn-lg">
                                        <i class="fas fa-lock mr-2"></i>
                                        Change Password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Account Statistics -->
                <div class="mt-8">
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <div class="flex items-center gap-3 mb-6">
                                <div class="badge badge-accent badge-lg">
                                    <i class="fas fa-chart-bar mr-2"></i>
                                </div>
                                <h2 class="card-title text-2xl">Account Statistics</h2>
                            </div>
                            
                            <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
                                <div class="stat">
                                    <div class="stat-figure text-primary">
                                        <i class="fas fa-user text-3xl"></i>
                                    </div>
                                    <div class="stat-title">Member Since</div>
                                    <div class="stat-value text-primary" id="memberSince">-</div>
                                    <div class="stat-desc">Account created</div>
                                </div>
                                
                                <div class="stat">
                                    <div class="stat-figure text-secondary">
                                        <i class="fas fa-comment text-3xl"></i>
                                    </div>
                                    <div class="stat-title">Reviews</div>
                                    <div class="stat-value text-secondary" id="reviewCount">0</div>
                                    <div class="stat-desc">Perfume reviews</div>
                                </div>
                                
                                <div class="stat">
                                    <div class="stat-figure text-accent">
                                        <i class="fas fa-star text-3xl"></i>
                                    </div>
                                    <div class="stat-title">Average Rating</div>
                                    <div class="stat-value text-accent" id="avgRating">-</div>
                                    <div class="stat-desc">Your reviews</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <%- include('partials/modals') %>
    <%- include('partials/toast') %>
    
    <%- include('partials/footer') %>
    
    <script src="/javascripts/app.js"></script>
</body>
</html>