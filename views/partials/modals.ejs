<!-- Perfume Form Modal -->
<dialog id="perfumeFormModal" class="modal modal-overlay">
  <div class="large-form-modal-content">
    <button class="modal-close-btn" onclick="closeModal()">
      <i class="fas fa-times"></i>
    </button>
    <div class="large-form-header">
      <div style="position: relative; z-index: 1">
        <h3 id="perfumeFormTitle" class="text-2xl font-bold">
          Add New Perfume
        </h3>
        <p class="text-white/80 mt-1">Create a new fragrance entry</p>
      </div>
    </div>
    <div class="large-form-body">
      <form id="perfumeForm">
        <div class="form-grid">
          <!-- Left Column -->
          <div>
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-spray-can mr-2"></i>Perfume Name
              </label>
              <input
                type="text"
                id="perfumeName"
                placeholder="e.g., Sauvage, Bleu de Chanel"
                class="form-input"
                required
              />
            </div>
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-tag mr-2"></i>Brand
              </label>
              <select id="perfumeBrand" class="form-select" required>
                <option value="" disabled selected>Select a brand</option>
              </select>
            </div>
            <div class="form-grid-half">
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-dollar-sign mr-2"></i>Price ($)
                </label>
                <input
                  type="number"
                  id="perfumePrice"
                  step="0.01"
                  placeholder="120.00"
                  class="form-input"
                  required
                />
              </div>
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-flask mr-2"></i>Volume (ml)
                </label>
                <input
                  type="number"
                  id="perfumeVolume"
                  placeholder="100"
                  class="form-input"
                  required
                />
              </div>
            </div>
            <div class="form-grid-half">
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-tint mr-2"></i>Concentration
                </label>
                <select id="perfumeConcentration" class="form-select" required>
                  <option value="" disabled selected>Select type</option>
                  <option value="Extrait">Extrait (20-30%)</option>
                  <option value="EDP">EDP - Eau de Parfum (15-20%)</option>
                  <option value="EDT">EDT - Eau de Toilette (5-15%)</option>
                  <option value="EDC">EDC - Eau de Cologne (2-4%)</option>
                </select>
              </div>
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-users mr-2"></i>Target Audience
                </label>
                <select id="perfumeTarget" class="form-select" required>
                  <option value="" disabled selected>Select audience</option>
                  <option value="male">👨 Male</option>
                  <option value="female">👩 Female</option>
                  <option value="unisex">👥 Unisex</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Right Column -->
          <div>
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-image mr-2"></i>Primary Image URL
              </label>
              <input
                type="url"
                id="perfumeImageUrl"
                placeholder="https://example.com/perfume-image.jpg"
                class="form-input"
                oninput="updatePreview()"
              />
            </div>
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-images mr-2"></i>Secondary Image URL
              </label>
              <input
                type="url"
                id="perfumeUri"
                placeholder="https://example.com/perfume-image2.jpg"
                class="form-input"
              />
            </div>
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-eye mr-2"></i>Image Preview
              </label>
              <div class="image-preview-container">
                <img
                  id="perfumePreview"
                  alt="Image Preview"
                  class="image-preview"
                  style="display: none"
                />
                <div id="previewPlaceholder" class="preview-placeholder">
                  <i class="fas fa-image text-4xl mb-2"></i>
                  <span>Image preview will appear here</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Bottom Section -->
        <div class="form-grid-full">
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-align-left mr-2"></i>Description
            </label>
            <textarea
              id="perfumeDescription"
              class="form-textarea"
              rows="3"
              placeholder="Write a captivating description that highlights the perfume's character, mood, and unique qualities..."
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-leaf mr-2"></i>Key Ingredients & Notes
            </label>
            <textarea
              id="perfumeIngredients"
              class="form-textarea"
              rows="2"
              placeholder="Top notes: Bergamot, Pepper | Heart notes: Lavender, Pink Pepper | Base notes: Ambroxan, Cedar, Labdanum"
              required
            ></textarea>
          </div>
        </div>
      </form>
    </div>
    <div class="modal-actions">
      <button type="button" class="btn-secondary-modern" onclick="closeModal()">
        <i class="fas fa-times mr-2"></i>Cancel
      </button>
      <button type="submit" form="perfumeForm" class="btn-primary-modern">
        <i class="fas fa-save mr-2"></i>Save Perfume
      </button>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button onclick="closeModal()">close</button>
  </form>
</dialog>

