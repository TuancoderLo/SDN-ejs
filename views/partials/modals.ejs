<!-- Perfume Detail Modal -->
<dialog id="perfumeModal" class="modal">
  <div class="modal-box max-w-4xl">
    <form method="dialog">
      <button
        class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
        onclick="closeModal()"
      >
        ✕
      </button>
    </form>
    <div id="perfumeDetail">
      <!-- Perfume details will be loaded here -->
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button onclick="closeModal()">close</button>
  </form>
</dialog>

<!-- Brand Form Modal -->
<dialog id="brandModal" class="modal">
  <div class="modal-box">
    <form method="dialog">
      <button
        class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
        onclick="closeModal()"
      >
        ✕
      </button>
    </form>
    <h3 class="font-bold text-lg mb-4">Add New Brand</h3>
    <form id="brandForm" class="space-y-4">
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">Brand Name</span>
        </label>
        <input
          type="text"
          id="brandName"
          placeholder="Enter brand name"
          class="input input-bordered"
          required
        />
      </div>
      <div class="modal-action">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save mr-2"></i>
          Save Brand
        </button>
      </div>
    </form>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button onclick="closeModal()">close</button>
  </form>
</dialog>

<!-- Perfume Form Modal -->
<dialog id="perfumeFormModal" class="modal">
  <div class="modal-box max-w-4xl bg-base-200/95 backdrop-blur-sm">
    <form method="dialog">
      <button
        class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 z-10"
      >
        ✕
      </button>
    </form>
    <h3 id="perfumeFormTitle" class="font-bold text-2xl mb-6 text-base-content">
      Add New Perfume
    </h3>
    <form id="perfumeForm" class="space-y-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-6 gap-y-4">
        <!-- Left Column -->
        <div class="space-y-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Perfume Name</span>
            </label>
            <input
              type="text"
              id="perfumeName"
              placeholder="e.g., Sauvage"
              class="input input-bordered w-full"
              required
            />
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Brand</span>
            </label>
            <select
              id="perfumeBrand"
              class="select select-bordered w-full"
              required
            >
              <option value="" disabled selected>Select a brand</option>
            </select>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Price ($)</span>
              </label>
              <input
                type="number"
                id="perfumePrice"
                step="0.01"
                placeholder="e.g., 120"
                class="input input-bordered w-full"
                required
              />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Volume (ml)</span>
              </label>
              <input
                type="number"
                id="perfumeVolume"
                placeholder="e.g., 100"
                class="input input-bordered w-full"
                required
              />
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Concentration</span>
              </label>
              <select
                id="perfumeConcentration"
                class="select select-bordered w-full"
                required
              >
                <option value="" disabled selected>Select type</option>
                <option value="Extrait">Extrait</option>
                <option value="EDP">EDP (Eau de Parfum)</option>
                <option value="EDT">EDT (Eau de Toilette)</option>
                <option value="EDC">EDC (Eau de Cologne)</option>
              </select>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Target Audience</span>
              </label>
              <select
                id="perfumeTarget"
                class="select select-bordered w-full"
                required
              >
                <option value="" disabled selected>Select audience</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="unisex">Unisex</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Image URL (Primary)</span>
            </label>
            <input
              type="url"
              id="perfumeImageUrl"
              placeholder="https://example.com/image.jpg"
              class="input input-bordered w-full"
              oninput="updatePreview()"
            />
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Image URL (Secondary)</span>
            </label>
            <input
              type="url"
              id="perfumeUri"
              placeholder="https://example.com/image2.jpg"
              class="input input-bordered w-full"
            />
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Image Preview</span>
            </label>
            <div
              class="mt-1 flex justify-center items-center rounded-lg border border-dashed border-base-300 h-48 bg-base-100 p-2"
            >
              <img
                id="perfumePreview"
                alt="Image Preview"
                class="max-h-full max-w-full object-contain"
                src="data:image/svg+xml;base64,"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom Section -->
      <div class="space-y-4 pt-4">
        <div class="form-control">
          <label class="label">
            <span class="label-text font-medium">Description</span>
          </label>
          <textarea
            id="perfumeDescription"
            class="textarea textarea-bordered w-full"
            rows="3"
            placeholder="A short, captivating description of the perfume..."
            required
          ></textarea>
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-medium">Ingredients</span>
          </label>
          <textarea
            id="perfumeIngredients"
            class="textarea textarea-bordered w-full"
            rows="2"
            placeholder="e.g., Bergamot, Pepper, Ambroxan, Cedar"
            required
          ></textarea>
        </div>
      </div>

      <div class="modal-action mt-8">
        <button
          type="button"
          class="btn btn-ghost mr-2"
          onclick="document.getElementById('perfumeFormModal').close()"
        >
          Cancel
        </button>
        <button type="submit" class="btn btn-primary w-32">Save</button>
      </div>
    </form>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<!-- Floating Add Perfume Button (Admin only) -->
<div
  id="addPerfumeFab"
  class="fixed bottom-6 right-6 z-40"
  style="display: none"
>
  <div class="tooltip tooltip-left" data-tip="Add Perfume">
    <button
      class="btn btn-circle btn-lg shadow-2xl hover:shadow-3xl transition-all duration-300 hover:scale-110 animate-float text-white"
      style="background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%)"
      onclick="showPerfumeForm()"
    >
      <i class="fas fa-plus text-xl"></i>
    </button>
  </div>
</div>
