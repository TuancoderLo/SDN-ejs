    <!-- Enhanced Modal Fix Script -->
    <script>
        // Enhanced modal management
        function enhancedCloseModal() {
            // Close all dialog modals
            const dialogModals = document.querySelectorAll("dialog[open]");
            dialogModals.forEach((modal) => {
                modal.close();
                modal.removeAttribute('open');
            });
            
            // Close all custom modals
            const customModals = document.querySelectorAll(".modal-fix.show");
            customModals.forEach((modal) => {
                modal.classList.remove('show');
            });
            
            // Reset all forms
            const forms = document.querySelectorAll("form");
            forms.forEach((form) => {
                if (form.id === "brandForm" || form.id === "perfumeForm") {
                    form.reset();
                    // Clear any dataset attributes
                    delete form.dataset.mode;
                    delete form.dataset.perfumeId;
                }
            });
            
            // Reset modal titles
            const modalTitles = document.querySelectorAll("#perfumeFormModal h3, #brandFormModal h3");
            modalTitles.forEach((title) => {
                if (title.id.includes('perfume')) {
                    title.textContent = "Add New Perfume";
                } else if (title.id.includes('brand')) {
                    title.textContent = "Add New Brand";
                }
            });
            
            // Clear body scroll lock
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
            
            // Force reflow to ensure modal is closed
            document.body.offsetHeight;
        }
        
        // Override the existing closeModal function
        window.closeModal = enhancedCloseModal;
        
        // Add event listeners for modal close buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Handle modal backdrop clicks
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('modal-backdrop') || 
                    e.target.closest('.modal-backdrop')) {
                    enhancedCloseModal();
                }
            });
            
            // Handle escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    enhancedCloseModal();
                }
            });
            
            // Prevent modal content clicks from closing modal
            document.addEventListener('click', function(e) {
                if (e.target.closest('.modal-content') || 
                    e.target.closest('.modal-box')) {
                    e.stopPropagation();
                }
            });
        });
        
        // Fix for tab switching issues
        function showAdminTab(tabName) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.admin-tab');
            tabs.forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Show selected tab
            const selectedTab = document.getElementById('admin' + tabName.charAt(0).toUpperCase() + tabName.slice(1));
            if (selectedTab) {
                selectedTab.classList.remove('hidden');
            }
            
            // Update tab buttons
            const tabButtons = document.querySelectorAll('.tab');
            tabButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Find and activate the correct tab button
            const activeButton = document.querySelector(`[onclick="showAdminTab('${tabName}')"]`);
            if (activeButton) {
                activeButton.classList.add('active');
            }
            
            // Ensure modal is closed when switching tabs
            enhancedCloseModal();
        }
    </script>
